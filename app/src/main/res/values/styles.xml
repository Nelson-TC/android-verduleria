<resources>
    <style name="MenuItemStyle">
        <item name="android:textColor">@color/main</item>
        <item name="android:colorBackground">@color/secondary</item>
    </style>

    <style name="SelectedMenuItemStyle">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:colorBackground">@color/main</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <style name="AlertDialogPositiveButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/main</item>
    </style>

    <!-- Estilo para el botÃ³n "Cancelar" -->
    <style name="AlertDialogNegativeButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>